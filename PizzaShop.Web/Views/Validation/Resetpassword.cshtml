@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Reset Password";
}
@model PizzaShop.Entity.ViewModel.Resetpassword

<div class="card-body text-black rounded r ">
    <div id="frm">
        <form method="POST" class="p-5 needs-validation validate-form" asp-controller="Validation" asp-action="Resetpassword">
            <input type="hidden" asp-for="email" />
            <div class="d-flex align-items-center justify-content-center mb-3 pb-1">
                <img src="~/images/logos/pizzashop_logo.png" class="img-fluid " alt="" height="60px" width="60px" />
                <span class="h1 fw-bold mb-0">Pizza Shop</span>
            </div>

            <div>
                <div class="mb-4">
                    <h3>Reset Password</h3>
                </div>
                <div class="form-floating form-outline mb-4">
                    <input type="password" asp-for="NewPassword" placeholder="Enter New Password"
                        class="form-control form-control-lg" />
                    <label class="form-label" asp-for="NewPassword">New Password</label>
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>
                <div class="form-floating form-outline mb-4">
                    <input type="password" asp-for="ConfirmPassword" placeholder="Re-Enter Password"
                        class="form-control form-control-lg" />
                    <label class="form-label" asp-for="ConfirmPassword">Confirm password</label>
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="pt-3 row">
                    <input type="submit" value="Submit" class="btn btn-dark btn-lg btn-block">
                </div>
            </div>
        </form>
    </div>
</div>