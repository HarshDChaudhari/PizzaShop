@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Forgot Password";
}
@* @model PizzaShop.ViewModel.Login *@
@model PizzaShop.Entity.ViewModel.Forgotpassword;

<div class="card-body text-black rounded r ">
    <div id="frm">

        <form class="p-5" asp-controller="Validation" asp-action="Forgotpassword" method="post">
            <div class="d-flex align-items-center justify-content-center mb-3 pb-1">
                <img src="~/images/logos/pizzashop_logo.png" class="img-fluid " alt="" height="60px" width="60px" />
                <span class="h1 fw-bold mb-0">Pizza Shop</span>
            </div>

            <div>
                <div class="mb-4">
                    <h3>Forgot your Password</h3>
                </div>

                <div
                    class="form-floating form-outline mb-4 d-flex align-items-center justify-content-between border bg-white ">
                    <input type="email" id="email" placeholder="Email" asp-for="email"
                        class="form-control form-control-lg border-0 outline-0 bg-light" />
                    @* <img class="position-relative me-3" src="~/images/icons/customer.svg" height="25px" width="25px"
                        alt=""> *@
                    <label class="form-label" asp-validation-for="email">Email address</label>
                </div>

                <div class="pt-3 row">
                    <button class="btn btn-dark btn-lg btn-block"  type="Submit">Send</button>
                </div>
            </div>

            <div class="d-flex align-items-center justify-content-center mt-3">
                <a class="text-decoration-none" asp-controller="Validation" asp-action="Login">Back to login</a>
            </div>
        </form>
    </div>
</div>