@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login page";
}
@model PizzaShop.Entity.ViewModel.Login

<div class="card-body text-black rounded r ">
    <div id="frm">

        <form method="post" class="p-5 needs-validation validate-form" asp-controller="Validation" asp-action="Login">
            <div class="d-flex align-items-center justify-content-center mb-3 pb-1">
                <img src="~/images/logos/pizzashop_logo.png" class="img-fluid " alt="" height="60px" width="60px" />
                <span class="h1 fw-bold mb-0">Pizza Shop</span>
            </div>

            <div>
                <div class="mb-4">
                    <h3>Welcome,</h3>
                </div>

                <div class="form-floating form-outline mb-4 ">
                    <input type="email" asp-for="email" placeholder="Email"
                        class="form-control form-control-lg border-0 outline-0 bg-light" />
                    <label class="form-label" asp-for="email">Email address</label>
                    <span class="text-danger " asp-validation-for="email"></span>
                </div>

                <div class="form-floating form-outline mb-4">
                    <input type="password" asp-for="password" placeholder="Password"
                        class="form-control form-control-lg" />
                    <label class="form-label" asp-for="password">Password</label>
                    <span class="text-danger" asp-validation-for="password"></span>
                </div>


                <div class="d-flex flex-row align-items-center justify-content-between ">
                    <div>
                        <input type="checkbox" asp-for="Rememberme">
                        <label>Remember me</label>
                    </div>
                    <div>
                        <a class="small text-muted" asp-controller="Validation" asp-action="forgotpassword">Forgot
                            password?</a>
                    </div>
                </div>
                <div class="pt-3 row">
                    @* <a class="nav-link btn btn-dark btn-lg btn-block" asp-area="" asp-controller="Home" asp-action="Index"  >Login</a> *@
                    @* <button class="btn btn-dark btn-lg btn-block" type="submit" onclick="Validate()>Login</button>  *@
                    <input type="submit" value="Login" class="btn btn-dark btn-lg btn-block">
                </div>
            </div>
        </form>
    </div>
</div>