@{
    ViewData["Title"] = "Edit User Page";
}

@model PizzaShop.Entity.ViewModel.EdituserViewModel

<div class="row shadow bg-white mx-5 p-4 rounded">
    <div class="col-lg-12 d-flex justify-content-between">
        <div>
            <h2>Edit User</h2>
        </div>
        <div>
            <div class="input-group">
                <div class="d-flex align-items-center">
                    <div class="border">
                        <a asp-controller="Users" asp-action="Users" class="btn" role="button">
                            <i class="bi bi-chevron-left"></i>
                            <span>Back</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <form enctype="multipart/form-data" asp-action="EditUser" asp-controller="Users">
        <div class=" mt-3  p-3 bg-white rounded">
            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="fname" asp-for="FirstName" placeholder="FirstName">
                        <label asp-for="FirstName">FirstName</label>
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="LastName" id="lname" placeholder="LastName">
                        <label asp-for="LastName">LastName</label>
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="Username" id="uname" placeholder="Username">
                        <label asp-for="Username">Username</label>
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating">
                        <select class="form-select" id="roleSelect" aria-label="Floating label select example"
                            asp-for="Role">

                        </select>
                        <label for="roleSelect">Role</label>
                        <span class="text-danger" asp-validation-for="Role"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" asp-for="Email" id="floatingInput"
                            placeholder="name@example.com">
                        <label asp-for="Email">Email address</label>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-floating">
                        <select class="form-select" id="statusSelect" aria-label="Floating label select example"
                            asp-for="Status">
                            <option value="True">Active</option>
                            <option value="False">InActive</option>
                        </select>
                        <label for="statusSelect">Status</label>
                        <span class="text-danger" asp-validation-for="Status"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div
                    class="rounded col-12 form-control pt-4 pb-4 d-flex align-items-center justify-content-center border border-dotted border-5">
                    <div class="form-control ">
                        <label for="EditUserPic"
                            class="form-label d-flex gap-2 justify-content-center align-items-center pt-3 ">
                            @if (Model.Imgurl != null)
                            {
                                <img src="~/@Model.Imgurl" height="50px" width="50px" id="image-view-EditUser" alt="">
                            }
                            else
                            {
                                <img src="~/images/Default_pfp.svg.png" height="50px" width="50px" id="image-view-EditUser"
                                    alt="">
                            }
                            <h3><i class="bi bi-cloud-arrow-up-fill"></i>
                            </h3>
                            <span class="pb-2">
                                Drag and Drop or Browse Files
                            </span>
                        </label>
                        <input type="file" class="form-control d-none" id="EditUserPic">
                    </div>
                    <span class="text-danger" id="ImgUrl"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="countrySelect" aria-label="Floating label select example"
                            asp-for="Country">
                        </select>
                        <label for="countrySelect">Country</label>
                        <span class="text-danger" asp-validation-for="Country"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="stateSelect" aria-label="Floating label select example"
                            asp-for="State">
                        </select>
                        <label for="stateSelect">State</label>
                        <span class="text-danger" asp-validation-for="State"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" id="citySelect" aria-label="Floating label select example"
                            asp-for="City">
                        </select>
                        <label for="citySelect">City</label>
                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="ZipCode" placeholder="Zipcode">
                        <label asp-for="ZipCode">Zipcode</label>
                        <span class="text-danger" asp-validation-for="ZipCode"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="Address" placeholder="Address">
                        <label asp-for="Address">Address</label>
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="Phone" placeholder="Phone">
                        <label asp-for="Phone">Phone</label>
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>
                </div>
            </div>

            <div>
                <button type="submit" class="p-2 bg-primary text-white rounded">Update User</button>
                <button class="p-2 rounded" asp-controller="Users" asp-action="Users">Cancel</button>
            </div>
        </div>
    </form>
</div>

